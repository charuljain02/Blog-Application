<!DOCTYPE html>
<html>
<head>
  <%- include('./partials/head') %>
  <title>Home</title>
</head>
<body>

  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <h2>Welcome to Blogify</h2>

    <div class="row mt-4">
      <% if (blogs.length === 0) { %>
        <p>No blogs found. Be the first to <a href="/blog/add-new">add one</a>!</p>
      <% } %>

      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <% if (blog.coverImageURL) { %>
              <img src="/<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
